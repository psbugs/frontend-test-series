{
  "compilerOptions": {
    "jsx": "react-jsx",            // ✅ Required for React 17+ with JSX
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],      // ✅ Must include 'dom'
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  }
}
